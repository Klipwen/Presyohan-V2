<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@android:color/white" />

    <!-- Border (stroke) -->
    <stroke
        android:width="2dp"
        android:color="@color/light_gray" /> <!-- Light gray border -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Padding inside the shape if needed -->
    <padding
        android:top="10dp"
        android:bottom="10dp" />
</shape>

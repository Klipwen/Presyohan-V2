<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/icon_menu"
            android:contentDescription="Menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Presyohan Logo Text -->
        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="presyo"
            android:textColor="@color/presyo_orange"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@id/menuIcon"
            app:layout_constraintTop_toTopOf="@id/menuIcon"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/logoTextBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="han?"
            android:textColor="@color/presyo_teal"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@id/logoText"
            app:layout_constraintTop_toTopOf="@id/logoText"
            android:layout_marginStart="0dp" />

        <!-- Notification Icon (left of Profile Icon) -->
        <ImageView
            android:id="@+id/notifIcon"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Notifications"
            android:src="@drawable/icon_notification"
            app:layout_constraintEnd_toStartOf="@id/profileIcon"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Profile Icon (right-most) -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/icon_profile"
            android:contentDescription="Profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Yellow Rounded Header -->

        <!-- Store List Placeholder -->
        <TextView
            android:id="@+id/headerLabel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_header_yellow"
            android:gravity="center"
            android:text="Create Store"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menuIcon" />

    <!-- Form Card with rounded corners and light green background -->
    <LinearLayout
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_bg"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/headerLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Store Icon in colored box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="16dp">
            <ImageView
                android:id="@+id/iconPresyohan"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:src="@drawable/icon_store"
                android:contentDescription="Store Icon" />
        </LinearLayout>

        <!-- Store Name Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store name"
            android:textColor="@color/presyo_teal"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp" />
        <!-- Store Name Input -->

        <!-- Store Branch Label -->
        <EditText
            android:id="@+id/inputItemName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:textColorHint="@color/edittext_hint"
            android:textColor="@color/presyo_darkblue"
            android:padding="14dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store Branch"
            android:textColor="@color/presyo_teal"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="2dp" />
        <!-- Store Branch Input -->
        <EditText
            android:id="@+id/inputStoreBranch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:textColorHint="@color/edittext_hint"
            android:textColor="@color/presyo_darkblue"
            android:padding="14dp"
            android:textSize="16sp" />

        <!-- Store Type Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store Type"
            android:textColor="@color/presyo_teal"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="2dp" />
        <!-- Store Type Spinner -->

        <!-- Other Store Type Input (Hidden by default) -->

        <Spinner
            android:id="@+id/spinnerStoreType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/edittext_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:spinnerMode="dropdown"
            android:textColor="@color/presyo_darkblue"
            android:textColorHint="@color/edittext_hint" />

        <EditText
            android:id="@+id/editOtherStoreType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:hint="Enter Store type"
            android:textColorHint="#B0B0B0"
            android:textColor="@color/presyo_darkblue"
            android:background="@drawable/edittext_background"
            android:padding="14dp"
            android:textSize="16sp" />

        <!-- Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonBack"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/presyo_teal"
                android:text="Back"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonCreate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/presyo_orange"
                android:text="Create"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>

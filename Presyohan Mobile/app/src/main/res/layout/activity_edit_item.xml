<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/headerLabel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_header_yellow"
            android:gravity="center"
            android:text="EDIT ITEM"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/branchRow"
            android:layout_marginTop="8dp"/>

        <!-- Menu Icon -->

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:contentDescription="Menu"
            android:src="@drawable/icon_menu"
            app:layout_constraintBottom_toBottomOf="@+id/branchRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/storeText" />

        <!-- Store Name -->
        <TextView
            android:id="@+id/storeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif"
            android:text="Store name"
            android:textColor="@color/presyo_orange"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/menuIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Divider and Branch Row -->
        <LinearLayout
            android:id="@+id/branchRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/menuIcon"
            app:layout_constraintTop_toBottomOf="@id/storeText">

            <TextView
                android:id="@+id/textDivider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="| "
                android:textColor="#B0B0B0"
                android:textSize="12sp"
                android:paddingEnd="4dp" />

            <TextView
                android:id="@+id/storeBranchText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Branch name"
                android:textColor="#888888"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Notification Icon -->
        <ImageView
            android:id="@+id/notifIcon"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Notifications"
            android:src="@drawable/icon_notification"
            app:layout_constraintBottom_toBottomOf="@+id/branchRow"
            app:layout_constraintEnd_toStartOf="@id/profileIcon"
            app:layout_constraintTop_toTopOf="@+id/storeText" />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Profile"
            android:src="@drawable/icon_profile"
            app:layout_constraintBottom_toBottomOf="@+id/branchRow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/storeText" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/headerLabel"
            app:layout_constraintStart_toStartOf="@+id/menuIcon"
            app:layout_constraintTop_toTopOf="@+id/headerLabel"
            app:srcCompat="@drawable/icon_back" />

        <LinearLayout
            android:id="@+id/formCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLabel">

            <!-- Item Name Label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/logoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="presyo"
                    android:textColor="@color/presyo_orange"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/logoTextBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:fontFamily="sans-serif"
                    android:text="han?"
                    android:textColor="@color/presyo_teal"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/logoText"
                    app:layout_constraintTop_toTopOf="@id/logoText" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnManageItems"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Manage Items"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/presyo_teal"/>

            </LinearLayout>

            <!-- Item Name Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:text="Item name"
                android:textColor="@color/presyo_teal"
                android:textSize="14sp" />
            <!-- Item Name Input -->
            <EditText
                android:id="@+id/inputItemName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:textColor="@color/presyo_darkblue"
                android:padding="14dp"
                android:textSize="16sp" />

            <!-- Item Description Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:text="Item description"
                android:textColor="@color/presyo_teal"
                android:textSize="14sp" />
            <!-- Item Description Input -->
            <EditText
                android:id="@+id/inputItemDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minLines="1"
                android:maxLines="6"
                android:background="@drawable/edittext_background"
                android:textColor="@color/presyo_darkblue"
                android:padding="14dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:text="Category"
                android:textColor="@color/presyo_teal"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerItemCategory"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/edittext_background"
                android:textColorHint="@color/edittext_hint"
                android:textColor="@color/presyo_darkblue"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:spinnerMode="dropdown" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textColor="@color/presyo_teal"
                            android:textSize="14sp" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/priceDisplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₱ 0.00"
                            android:textColor="@color/presyo_orange"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/inputItemPrice"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="0.00"
                        android:textColorHint="@color/presyo_darkblue"
                        android:textColor="@color/presyo_darkblue"
                        android:background="@drawable/edittext_background"
                        android:inputType="numberDecimal"
                        android:textStyle="bold"
                        android:padding="14dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="2dp"
                        android:text="Unit"
                        android:textColor="@color/presyo_teal"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/inputItemUnit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edittext_background"
                        android:textColorHint="@color/edittext_hint"
                        android:textColor="@color/presyo_darkblue"
                        android:hint="e.g. 500ml/1kg/3pcs"
                        android:padding="14dp"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/presyo_orange"
                android:text="Done"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <!-- Header Bar -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_header_yellow"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_back"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/headerLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Import Prices"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="12dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/storeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store Name"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/storeBranchText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branch"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Upload / Paste Card -->
            <LinearLayout
                android:id="@+id/cardUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paste raw text"
                    android:textStyle="bold"
                    android:textColor="@color/presyo_orange"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/inputText"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:hint="[Category]\n- Item (desc) — ₱999.99 | unit"
                    android:background="@android:color/transparent"
                    android:padding="12dp"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:textColorHint="@color/edittext_hint" />

                <TextView
                    android:id="@+id/charCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 characters"
                    android:textColor="@color/light_gray"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp" />

                <Button
                    android:id="@+id/btnParseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parse"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textColor="@color/presyo_orange"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!-- Validate Card -->
            <LinearLayout
                android:id="@+id/cardValidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:visibility="gone"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Validation"
                    android:textStyle="bold"
                    android:textColor="@color/presyo_orange"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/parsedCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 items parsed"
                    android:textColor="@color/black"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/warnCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 warnings"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/issuesCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 issues"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp" />

                <Button
                    android:id="@+id/btnComputeDryRun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next: Review changes"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- Review Card -->
            <LinearLayout
                android:id="@+id/cardReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:visibility="gone"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review"
                    android:textStyle="bold"
                    android:textColor="@color/presyo_orange"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/createsCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 new items"
                    android:textColor="@color/black"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/updatesCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 updates"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp" />

                <Button
                    android:id="@+id/btnApplyImport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apply"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- Done Card -->
            <LinearLayout
                android:id="@+id/cardDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:visibility="gone"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All set"
                    android:textStyle="bold"
                    android:textColor="@color/presyo_orange"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/doneSummaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imported successfully."
                    android:textColor="@color/black"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

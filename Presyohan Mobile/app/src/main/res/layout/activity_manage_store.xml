<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <!-- Header -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/icon_back"
        app:tint="@color/presyo_teal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/storeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store Name"
        android:textColor="@color/presyo_darkblue"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/storeBranchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branch Name"
        android:textColor="#888888"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/storeText"
        app:layout_constraintTop_toBottomOf="@id/storeText"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/headerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Store"
        android:textColor="@color/presyo_teal"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/storeBranchText"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    <!-- Editable Store Info Group -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEditStore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/headerLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/inputStoreName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Store Name"
                android:textColor="@color/presyo_darkblue"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/edittext_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputBranchName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Branch Name"
                android:textColor="@color/presyo_darkblue"
                android:textSize="15sp"
                android:background="@drawable/edittext_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:id="@+id/spinnerStoreType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="14dp" />

            <EditText
                android:id="@+id/inputCustomType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter store type"
                android:textColor="@color/presyo_darkblue"
                android:textSize="15sp"
                android:background="@drawable/edittext_background"
                android:textColorHint="@color/edittext_hint"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDone"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Done"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:cornerRadius="24dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:backgroundTint="@color/presyo_orange"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:elevation="6dp"
                android:padding="0dp"
                app:rippleColor="@color/presyo_teal" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnManageMembers"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Manage Members"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/presyo_teal"
        app:layout_constraintTop_toBottomOf="@id/cardEditStore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddItem"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Add Item"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/presyo_orange"
        app:layout_constraintTop_toBottomOf="@id/btnManageMembers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnManageCategory"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Manage Category"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/presyo_teal"
        app:layout_constraintTop_toBottomOf="@id/btnAddItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout> 
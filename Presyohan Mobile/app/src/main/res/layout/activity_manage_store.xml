<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/rounded_header_yellow"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/icon_back"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/headerLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Store settings"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="12dp"
            android:layout_weight="1" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPasteCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/icon_store"
                            android:tint="@color/presyo_orange"
                            android:contentDescription="Store Icon" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:padding="14dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/storeCodeExpiry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Expires in 23:52:02"
                            android:textAlignment="center"
                            android:textColor="#888888"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/storeCodeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="999999"
                            android:textColor="@color/presyo_teal"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(For copying prices to this store)"
                            android:textColor="#888888"
                            android:textSize="10sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/pasteCodeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paste-Code"
                            android:textColor="@color/presyo_teal"
                            android:textStyle="bold"
                            android:textAlignment="center" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnGenerateCode"
                            android:layout_width="100dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rounded_button_orange"
                            android:text="Generate Code"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:cornerRadius="16dp"
                            android:padding="0dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnRevokeCode"
                            android:layout_width="100dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rounded_button"
                            android:backgroundTint="@color/white"
                            android:text="Revoke"
                            android:textColor="@color/presyo_orange"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:cornerRadius="16dp"
                            android:padding="0dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/actionsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:id="@+id/btnCopyPrices"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/icon_copy_prices"
                        android:tint="@color/presyo_orange"
                        android:contentDescription="Copy Prices" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Copy Prices"
                        android:textColor="@color/presyo_orange"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnInviteStaff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/icon_invite_staff"
                        android:tint="@color/presyo_orange"
                        android:contentDescription="Invite Staff" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invite staff"
                        android:textColor="@color/presyo_orange"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnConvert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/icon_convert"
                        android:tint="@color/presyo_orange"
                        android:contentDescription="Convert" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Convert"
                        android:textColor="@color/presyo_orange"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnImportPrices"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/icon_download"
                        android:tint="@color/presyo_orange"
                        android:contentDescription="Import Prices" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Import prices"
                        android:textColor="@color/presyo_orange"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardEditStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/inputStoreName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Store name"
                        android:textColor="@color/presyo_darkblue"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:background="@drawable/edittext_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:layout_marginBottom="10dp" />

                    <EditText
                        android:id="@+id/inputBranchName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Branch"
                        android:textColor="@color/presyo_darkblue"
                        android:textSize="15sp"
                        android:background="@drawable/edittext_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:layout_marginBottom="10dp" />

                    <Spinner
                        android:id="@+id/spinnerStoreType"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext_background"
                        android:layout_marginBottom="14dp" />

                    <EditText
                        android:id="@+id/inputCustomType"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Enter store type"
                        android:textColor="@color/presyo_darkblue"
                        android:textSize="15sp"
                        android:background="@drawable/edittext_background"
                        android:textColorHint="@color/edittext_hint"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDone"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="DONE"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:cornerRadius="24dp"
                        app:iconPadding="0dp"
                        app:iconGravity="textStart"
                        app:backgroundTint="@color/presyo_orange"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:elevation="6dp"
                        android:padding="0dp"
                        app:rippleColor="@color/presyo_teal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- More Settings Section -->
            <TextView
                android:id="@+id/labelMoreSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="More Settings"
                android:textStyle="bold"
                android:textColor="@color/presyo_orange"
                android:textSize="16sp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/moreSettingsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/btnManageMembers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_bg_store_employee"
                    android:padding="12dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Members"
                        android:textStyle="bold"
                        android:textColor="#888888"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnManageCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_bg_store_employee"
                    android:padding="12dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Categories"
                        android:textStyle="bold"
                        android:textColor="#888888"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddItem"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/cardEditStore"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E5E5">

        <!-- White Header Container for Presyohan Logo Area -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerPresyohan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_presyohan"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:contentDescription="Menu"
                android:src="@drawable/icon_menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Presyohan Logo Text -->
            <TextView
                android:id="@+id/logoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="sans-serif"
                android:text="presyo"
                android:textColor="@color/presyo_orange"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/menuIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/logoTextBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:fontFamily="sans-serif"
                android:text="han?"
                android:textColor="@color/presyo_teal"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/logoText"
                app:layout_constraintTop_toTopOf="@id/logoText"
                app:layout_constraintBottom_toBottomOf="@id/logoText" />

            <!-- Notification Icon (left of Profile Icon) -->
            <ImageView
                android:id="@+id/notifIcon"
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Notifications"
                android:src="@drawable/icon_notification"
                app:layout_constraintEnd_toStartOf="@id/profileIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <View
                android:id="@+id/notifDot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/indicator_dot"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@id/profileIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Profile Icon (right-most) -->
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Profile"
                android:src="@drawable/icon_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Yellow Rounded Header -->

        <!-- Store List Placeholder -->
        <TextView
            android:id="@+id/headerLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_yellow"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="STORES"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerPresyohan"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewStores"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLabel"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/noStoreLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Store"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewStores"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <!-- Floating Add Store Button -->
        <ImageButton
            android:id="@+id/addStoreButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="32dp"
            android:background="@android:color/transparent"
            android:contentDescription="Add Store"
            android:elevation="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/button_add_store"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>

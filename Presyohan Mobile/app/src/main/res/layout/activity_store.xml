<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Top App Bar -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/icon_menu"
            android:contentDescription="Menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Presyohan Logo Text -->
        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="presyo"
            android:textColor="@color/presyo_orange"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@id/menuIcon"
            app:layout_constraintTop_toTopOf="@id/menuIcon"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/logoTextBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="han?"
            android:textColor="@color/presyo_teal"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@id/logoText"
            app:layout_constraintTop_toTopOf="@id/logoText"
            android:layout_marginStart="0dp" />

        <!-- Notification Icon (left of Profile Icon) -->
        <ImageView
            android:id="@+id/notifIcon"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Notifications"
            android:src="@drawable/icon_notification"
            app:layout_constraintEnd_toStartOf="@id/profileIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/notifDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/orange_dot"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@id/profileIcon"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>


        <!-- Profile Icon (right-most) -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/icon_profile"
            android:contentDescription="Profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Yellow Rounded Header -->

        <!-- Store List Placeholder -->
        <TextView
            android:id="@+id/headerLabel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_header_yellow"
            android:gravity="center"
            android:text="STORES"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menuIcon" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewStores"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLabel"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/noStoreLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Store"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewStores"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <!-- Floating Add Store Button -->
        <ImageButton
            android:id="@+id/addStoreButton"
            android:layout_width="100dp"
            android:layout_height="119dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="32dp"
            android:background="@android:color/transparent"
            android:contentDescription="Add Store"
            android:elevation="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/button_add_store"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>

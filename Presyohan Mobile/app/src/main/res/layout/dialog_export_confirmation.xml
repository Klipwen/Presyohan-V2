<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_rounded"
    android:minWidth="320dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/exportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export Pricelist"
        android:textColor="@color/presyo_orange"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/exportSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate a professionally formatted Excel file or a sharable note."
        android:textColor="#6B6B6B"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/exportTypeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rbExportExcel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export as Excel"
            android:textColor="@color/presyo_darkblue"
            android:textSize="15sp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbExportNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export as Notes"
            android:textColor="@color/presyo_darkblue"
            android:textSize="15sp"
            android:layout_marginTop="4dp" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/exportDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_info"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/rowsLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rows to export"
                android:textColor="@color/presyo_darkblue"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rowsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/presyo_darkblue"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#FFE0B2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/scopeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Scope"
                android:textColor="@color/presyo_darkblue"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/scopeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All products"
                android:textColor="@color/presyo_darkblue"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/columnsInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Columns: Category, Name, Description, Unit, Price"
            android:textColor="#8A8A8A"
            android:textSize="13sp"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notePreviewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_info"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/notePreviewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview note"
            android:textColor="@color/presyo_darkblue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/bg_white"
            android:padding="12dp"
            android:overScrollMode="ifContentScrolls">

            <TextView
                android:id="@+id/notePreviewText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#5B4631"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp" />
        </ScrollView>

        <TextView
            android:id="@+id/noteMetaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8A8A8A"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:text="0 items â€¢ 0 characters" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCopyNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copy Note"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round_orange" />

        <TextView
            android:id="@+id/noteHintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tip: After copying, open Google Keep or any notes app and paste the text."
            android:textColor="#6B6B6B"
            android:textSize="12sp"
            android:layout_marginTop="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelExport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/presyo_teal"
            android:textSize="15sp"
            android:background="@drawable/button_outline_dialog"
            android:layout_marginEnd="12dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirmExport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm Export"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:background="@drawable/button_round_orange" />
    </LinearLayout>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/rounded_bg"
    android:elevation="8dp">

    <!-- Store name -->
    <TextView
        android:id="@+id/dialogStoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/presyo_orange"
        android:layout_marginBottom="8dp" />

    <!-- Owner name -->
    <TextView
        android:id="@+id/dialogOwnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner Name"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <!-- Members section title -->
    <TextView
        android:id="@+id/dialogMembersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members"
        android:textSize="14sp"
        android:textColor="@color/presyo_teal"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:textAlignment="viewStart" />

    <!-- Members list (populated programmatically) -->
    <LinearLayout
        android:id="@+id/membersList"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout> 
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textStyle="bold"
                android:textColor="@color/presyo_darkblue"
                android:textSize="16sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 items"
                android:textColor="#888888"
                android:textSize="13sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewItems"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="View"
                android:textColor="@color/presyo_teal"
                app:cornerRadius="18dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/presyo_teal"
                app:strokeWidth="2dp"
                android:textSize="13sp"
                android:layout_marginEnd="6dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRename"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Rename"
                android:textColor="@color/presyo_orange"
                app:cornerRadius="18dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/presyo_orange"
                app:strokeWidth="2dp"
                android:textSize="13sp"
                android:layout_marginEnd="6dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Delete"
                android:textColor="@color/white"
                app:cornerRadius="18dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:backgroundTint="@color/red"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg"
    android:padding="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="2dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    >

    <!-- Store Icon -->
    <ImageView
        android:id="@+id/imageStoreIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_store"
        android:contentDescription="Store Icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/transparent"/>

    <!-- Store Name and Branch Row -->
    <LinearLayout
        android:id="@+id/nameBranchRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/imageStoreIcon"
        app:layout_constraintTop_toTopOf="@id/imageStoreIcon"
        app:layout_constraintEnd_toStartOf="@id/buttonOptions"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/textStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store Name"
            android:textStyle="bold"
            android:textColor="#F48C06"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/textDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            android:textColor="#B0B0B0"
            android:textSize="16sp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"/>

        <TextView
            android:id="@+id/textStoreBranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Branch Name"
            android:textColor="#888888"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- Store Type -->
    <TextView
        android:id="@+id/textStoreType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textColor="#F48C06"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/nameBranchRow"
        app:layout_constraintTop_toBottomOf="@id/nameBranchRow"
        app:layout_constraintEnd_toEndOf="@id/nameBranchRow"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="2dp"/>

    <!-- Three-dot menu -->
    <ImageView
        android:id="@+id/buttonOptions"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/icon_options"
        android:contentDescription="Options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/transparent"
        android:padding="2dp"
        app:tint="@color/presyo_orange" />

</androidx.constraintlayout.widget.ConstraintLayout> 
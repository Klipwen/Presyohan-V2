<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white"
    android:padding="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="2dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/viewRoleIndicator"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/presyo_yellow"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"/>


    <TextView
        android:id="@+id/textStoreBranch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Branch Name"
        android:textColor="@color/edittext_hint"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/viewRoleIndicator"
        app:layout_constraintEnd_toStartOf="@+id/buttonOptions"
        app:layout_constraintStart_toEndOf="@+id/viewRoleIndicator"
        app:layout_constraintTop_toTopOf="@id/viewRoleIndicator" />

    <ImageView
        android:id="@+id/buttonOptions"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/icon_options"
        android:contentDescription="Options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="2dp"
        app:tint="#D9D9D9" />

    <ImageView
        android:id="@+id/imageStoreIcon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/icon_store"
        android:contentDescription="Store Icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textStoreBranch"
        android:layout_marginTop="8dp"
        android:layout_marginStart="18dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/textStoreName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Store Name"
        android:textStyle="bold"
        android:textColor="@color/presyo_orange"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/imageStoreIcon"
        app:layout_constraintTop_toTopOf="@id/imageStoreIcon"
        app:layout_constraintEnd_toStartOf="@id/buttonArrow"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/textStoreType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="General Merchandise"
        android:textColor="@color/presyo_teal"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/textStoreName"
        app:layout_constraintTop_toBottomOf="@id/textStoreName"
        app:layout_constraintEnd_toStartOf="@id/buttonArrow"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/buttonArrow"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/icon_back"
        android:rotation="180"
        app:tint="@color/presyo_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageStoreIcon"
        app:layout_constraintBottom_toBottomOf="@id/imageStoreIcon"/>

</androidx.constraintlayout.widget.ConstraintLayout>